function print_game_vars()
	local game_vars = dget(0)
	local vars_as_hex = tostr(game_vars,true)
 local saldo = (game_vars  >>  4) & 0xfff
	local ano		 = (game_vars  <<  7) & 0x7ff
	local mes  	= (game_vars  << 11) & 0xf  
	local	dia   = (game_vars  << 16) & 0x1f
	
	--interface borders
	rect(1,1,126,23,1)
	line(1,9,126,9,1)
	--interface label
	print("game_vars",3,3,6)
	print("|hexcode:",40,3,6)
	print(vars_as_hex,76,3,7)

	--saldo
	print("saldo:"..saldo,3,11,10)
	--data
	print("data:",3,17,6)
	--dia
 print(dia,22,17,4)
	print("/",30,17,6)
 --mes
 print(mes,34,17,3)
	print("/",42,17,6)
 --ano
 print(ano,46,17,14)

end
